# Where the Django project is.
CELERYBEAT_CHDIR="$ROOT"

# Path to celerybeat
CELERYBEAT="manage celerybeat"

# Extra arguments to celerybeat
CELERYBEAT_OPTS="--schedule=$LOCAL/celery/celerybeat-schedule"

# Override these defaults with local settings if present
if [ -f "$CELERY/local.celerybeat" ];
then
    source "$CELERY/local.celerybeat"
fi
